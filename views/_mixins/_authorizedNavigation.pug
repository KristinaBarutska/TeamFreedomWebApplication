mixin user-navigation
    nav.navbar.navbar-default
        .container-fluid.text-center
            .navbar-header
                button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/") Cooking Recipes 
            
                ul.nav.navbar-nav
                    li
                        a(href="/categories/list") Categories
                    li
                        a(href="/articles/list") Articles                  
                    li
                        a(href="/categories/create") Add Category
                    li
                        a(href="/articles/create") Add Article
                    li
                        a(href="/recipes/create") Add Recipe
                    li
                        form.form-inline(action="/search" method="get")
                            input.form-control(type="text" name="pattern")
                            button.btn.btn-danger
                                span.glyphicon.glyphicon-search
                    li
                        a(href="/profile/")= user.profile.name
                    li
                        form(action="/logout" method="get")
                            button.btn.btn-medium.btn-lg
                                span.glyphicon.glyphicon-log-out
                   
                        