mixin user-navigation
    nav.navbar.navbar-dark.warning-color-dark.navbar-fixed-top
            button.navbar-toggle.hidden-md-up(type="button" data-toggle="collapse" data-target="main-navbar-collapse")
                i.fa.fa-bars
            a.navbar-brand(href="/") Вкусно
            .collapse.navbar-toggleable-xs(id="main-navbar-collapse")
                ul.nav.navbar-nav
                    li.nav-item.nav-link
                        a(href="/categories/list") Категории
                    li.nav-item.nav-link
                        a(href="/articles/list") Статии                  
                    li.nav-item.dropdown
                        a.nav-link.dropdown-toggle(data-toggle="dropdown" role="button") Добави
                        div.dropdown-menu.dropdown-primary(aria-labelledby="dropdownMenu1" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut")
                            a.dropdown-item(href="/categories/create") Категория
                            a.dropdown-item(href="/recipes/create") Рецепта
                            a.dropdown-item(href="/articles/create") Статия
                ul.nav.navbar-nav.navbar-right                         
                    li.nav-item.dropdown
                        a.nav-link.dropdown-toggle(data-toggle="dropdown" role="button")
                            i.fa.fa-user.fa-lg(aria-hidden="true")
                        div.dropdown-menu.dropdown-primary(aria-labelledby="dropdownMenu1" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut")
                            a.dropdown-item(href="/articles/create") Моите Рецепти
                            a.dropdown-item(href="/recipes/create") Любими Рецепти
                            a.dropdown-item(href="/status") Статус Приложение
                            a.dropdown-item(href="/profile/")= user.facebook.email || user.email
                            form(action="/logout" method="get")
                                button.btn.btn-warning.btn-sm
                                    i.fa.fa-sign-out
                                        | Logout
                    li.nav-item
                        form.form-inline(action="/search" method="get")
                            input.form-control(type="text" name="pattern" placeholder="Search")
                        
                   
                        